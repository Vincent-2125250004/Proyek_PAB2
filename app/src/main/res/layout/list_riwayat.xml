<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape"
        android:padding="20dp"
        android:textAlignment="center"
        card_view:cardElevation="0dp">

        <ImageView
            android:id="@+id/IconKreditDebit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/money_recive_svgrepo_com"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_namatrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Nama Transaksi"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintStart_toEndOf="@id/IconKreditDebit"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="tanggal transaksi"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintStart_toEndOf="@id/IconKreditDebit"
            app:layout_constraintTop_toBottomOf="@id/tv_namatrans"
            />
        <TextView
            android:id="@+id/tv_jenistransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Kredit/Debit"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintStart_toEndOf="@id/tv_tanggal"
            app:layout_constraintTop_toBottomOf="@id/tv_namatrans"
            />
        <TextView
            android:id="@+id/tv_jumlahtrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Rp.100.000,-"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>