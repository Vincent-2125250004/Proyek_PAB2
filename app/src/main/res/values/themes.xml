<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CashFlow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#14213D</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavigationViewTextStyle">
        ...
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:color">@color/black</item>
        ...
    </style>

    <style name="CustomDatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <!-- Atur warna teks tanggal yang dipilih -->
        <item name="colorAccent">#000000</item>
        <!-- Atur warna latar belakang tanggal yang dipilih -->
        <item name="colorControlActivated">#fca311</item>
        <!-- Atur warna teks dan ikon tombol aksi -->
        <item name="colorPrimary">#14213d</item>
        <!-- Atur warna latar belakang dialog -->
        <item name="colorSurface">#e5e5e5</item>
    </style>

</resources>